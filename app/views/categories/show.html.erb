<div class="row">

  <%= render partial: 'common/left_side_bar' %>

  <div class="col-md-9">

    <div class="row">
      <% if @products.present? %>
        <% @products.each do |product| %>
          <%= render partial: 'common/product', locals: { product: product } %>
        <% end %>
        <%= render partial: 'common/more_product' if is_load_needed?(@products) %>
      <% else %>
        <div class="alert alert-danger fade in">
          No products found for this category!
        </div>
      <% end %>
    </div>

</div>
